<%- include("../partials/head.ejs", {href: "http://localhost:3000/css/users/users-register.css" ,
    title: "Register : HackShoee" }) %>

    <body>
        <%- include("../partials/users/navigation.ejs") %>
            <div class="main-container">
                <h1>Register</h1>
                <form action="/register" method="POST">
                    <div class="form">
                        <div class="mb-3">
                            <label for="inputEmail" class="form-label">Email</label>
                            <input type="email" name="email" class="form-control" id="inputEmail">
                        </div>
                        <div class="mb-3">
                            <label for="inputPassword" class="form-label">Password</label>
                            <input type="password" name="password" class="form-control" id="inputPassword">
                        </div>
                        <div class="mb-3">
                            <label for="fname" class="form-label">First Name</label>
                            <input type="text" name="first_name" class="form-control" id="fname">
                        </div>
                        <div class="mb-3">
                            <label for="lname" class="form-label">Last Name</label>
                            <input type="text" name="last_name" class="form-control" id="lname">
                        </div>
                    </div>
                    <div>
                        <div class="mb-3">
                            <label for="address" class="form-label">Address</label>
                            <input type="text" name="address" class="form-control" id="address">
                        </div>
                    </div>
                    <div class="form">
                        <div class="mb-3">
                            <label for="age" class="form-label">Age</label>
                            <input type="number" name="age" class="form-control" id="age">
                        </div>
                        <div class="mb-3">
                            <label for="gender" class="form-label">Gender</label>
                            <select class="form-select" name="gender" aria-label="Default select example">
                                <option disabled selected>-- Select ---</option>
                                <option value="Male">Male</option>
                                <option value=Female">Female</option>
                            </select>
                        </div>
                        <div class="mb-3 submit-btn">
                            <input class="btn btn-warning" type="submit" value="Submit">
                        </div>
                        <div class="mb-3 reset-btn">
                            <input class="btn btn-danger" type="reset" value="Cancel">
                        </div>
                    </div>
                </form>
            </div>
    </body>

    </html>